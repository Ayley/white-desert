<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:White_Desert"
             xmlns:sty="using:FluentAvalonia.Styling"
             x:Class="White_Desert.App">

    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="/Controls/PageContainer.axaml" />
            </ResourceDictionary.MergedDictionaries>

            <StaticResource x:Key="SystemListLowColor" ResourceKey="ControlFillColorSecondary" />
            <StaticResource x:Key="SystemListLowBrush" ResourceKey="ControlFillColorSecondaryBrush" />
        </ResourceDictionary>
    </Application.Resources>

    <Application.Styles>
        <FluentTheme />
        <sty:FluentAvaloniaTheme />

        <StyleInclude Source="avares://Avalonia.Controls.TreeDataGrid/Themes/Fluent.axaml" />
        <StyleInclude Source="avares://AvaloniaEdit/Themes/Fluent/AvaloniaEdit.xaml" />
        <StyleInclude Source="/Controls/HexEditorControl.axaml" />
    </Application.Styles>
</Application>