<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
            
             xmlns:editor="clr-namespace:White_Desert.ViewModels.Editor"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="editor:FileInfoViewModel"
             x:Class="White_Desert.Views.Editor.FileInfoView">

    <Design.DataContext>
        <editor:FileInfoViewModel />
    </Design.DataContext>

    <UserControl.Styles>
        <Style Selector="Border.ExpanderClone">
            <Setter Property="Background" Value="{DynamicResource CardBackgroundFillColorDefaultBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource CardStrokeColorDefaultBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="16,0" />
            <Setter Property="MinHeight" Value="85" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
        </Style>
    </UserControl.Styles>
    
    <Grid RowDefinitions="Auto, Auto, *">

        <TextBlock Grid.Row="0" Text="{Binding SelectedPazFile.FileName}"
                   Theme="{DynamicResource BodyStrongTextBlockStyle}"
                   VerticalAlignment="Center"
                   FontSize="22"
                   Margin="5,0,0,5" />

        <UniformGrid Grid.Row="1" Columns="3" VerticalAlignment="Top" ColumnSpacing="8">

            <Border Classes="ExpanderClone">
                <Grid ColumnDefinitions="48, *">
                    <ui:SymbolIcon Symbol="Library" FontSize="20" VerticalAlignment="Center"
                                   HorizontalAlignment="Left" />
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Archive"
                                   Theme="{DynamicResource BodyStrongTextBlockStyle}" />
                        <TextBlock Text="{Binding SelectedPazFile.PazFileName}"
                                   Theme="{DynamicResource CaptionTextBlockStyle}"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                    </StackPanel>
                </Grid>
            </Border>

            <Border Classes="ExpanderClone">
                <Grid ColumnDefinitions="48, *">
                    <ui:SymbolIcon Symbol="ZipFolder" FontSize="20" VerticalAlignment="Center"
                                   HorizontalAlignment="Left" />
                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="10">
                        <StackPanel Spacing="0">
                            <TextBlock Text="Storage"
                                       Theme="{DynamicResource BodyStrongTextBlockStyle}" />
                            <Grid>
                                <TextBlock
                                    Text="{Binding SelectedPazFile.CompressionRatioString}"
                                    Theme="{DynamicResource CaptionTextBlockStyle}"
                                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                    HorizontalAlignment="Left" />
                                <TextBlock
                                    Text="{Binding SelectedPazFile.FormattedOriginalSize}"
                                    Theme="{DynamicResource CaptionTextBlockStyle}"
                                    HorizontalAlignment="Right"
                                    Margin="0,0,0,-12" />
                            </Grid>
                        </StackPanel>
                        <StackPanel Spacing="4">
                            <ProgressBar Value="{Binding SelectedPazFile.CompressionRatio}"
                                         Minimum="0" Maximum="100"
                                         HorizontalAlignment="Stretch"
                                         Height="4" />
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <Border Classes="ExpanderClone">
                <Grid ColumnDefinitions="48, *">
                    <ui:SymbolIcon Symbol="Tag" FontSize="20" VerticalAlignment="Center"
                                   HorizontalAlignment="Left" />
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Mapping"
                                   Theme="{DynamicResource BodyStrongTextBlockStyle}" />
                        <TextBlock Text="{Binding SelectedPazFile.MappingString}"
                                   Theme="{DynamicResource CaptionTextBlockStyle}"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                    </StackPanel>
                </Grid>
            </Border>

        </UniformGrid>

        <Border Grid.Row="2"
                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                BorderThickness="1" CornerRadius="8" Margin="0,10,0,0">
            <ScrollViewer>
                <StackPanel Margin="15" Spacing="12">
                    <TextBlock Text="Technical Debug Details"
                               Theme="{DynamicResource BodyStrongTextBlockStyle}" />

                    <StackPanel>
                        <TextBlock Text="Physical File Offset"
                                   Theme="{DynamicResource CaptionTextBlockStyle}"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                        <TextBlock
                            Text="{Binding SelectedPazFile.Offset, StringFormat='{}0x{0:X8}'}"
                            FontSize="16" FontWeight="SemiBold"
                            FontFamily="Cascadia Code,Consolas" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,0,0,15">
                        <Border Background="{DynamicResource SystemAccentColor}"
                                IsVisible="{Binding SelectedPazFile.IsCompressed}"
                                CornerRadius="4" Padding="8,4">
                            <TextBlock Text="COMPRESSED"
                                       FontSize="10" FontWeight="Bold" Foreground="White" />
                        </Border>

                        <Border Background="#D83B01"
                                CornerRadius="4" Padding="8,4">
                            <Border.IsVisible>
                                <MultiBinding Converter="{x:Static BoolConverters.And}">
                                    <Binding Path="!SelectedPazFile.IsCompressed" />
                                </MultiBinding>
                            </Border.IsVisible>
                            <TextBlock Text="LIKELY ENCRYPTED"
                                       FontSize="10" FontWeight="Bold" Foreground="White" />
                        </Border>
                    </StackPanel>

                    <Separator />

                    <UniformGrid Columns="2">
                        <StackPanel>
                            <TextBlock Text="Hash (Path)"
                                       Theme="{DynamicResource CaptionTextBlockStyle}"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                            <TextBlock
                                Text="{Binding SelectedPazFile.Hash, StringFormat='{}0x{0:X8}'}"
                                FontFamily="Consolas" />
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Archive Block Index (PazID)"
                                       Theme="{DynamicResource CaptionTextBlockStyle}"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                            <TextBlock Text="{Binding SelectedPazFile.PazId}"
                                       FontFamily="Consolas" />
                        </StackPanel>
                    </UniformGrid>

                    <UniformGrid Columns="2" Margin="0,10,0,0">
                        <StackPanel>
                            <TextBlock Text="Compressed Size (Bytes)"
                                       Theme="{DynamicResource CaptionTextBlockStyle}"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                            <TextBlock
                                Text="{Binding SelectedPazFile.CompressedSize, StringFormat='{}{0:N0}'}"
                                FontFamily="Consolas" />
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Original Size (Bytes)"
                                       Theme="{DynamicResource CaptionTextBlockStyle}"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                            <TextBlock
                                Text="{Binding SelectedPazFile.OriginalSize, StringFormat='{}{0:N0}'}"
                                FontFamily="Consolas" />
                        </StackPanel>
                    </UniformGrid>

                    <Border Background="{DynamicResource FillColorDoubleOpacityBrush}"
                            CornerRadius="4" Padding="10">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <ui:SymbolIcon Symbol="OpenFolder" FontSize="14" />
                            <TextBlock Text="{Binding SelectedPazFile.FolderName}"
                                       FontSize="12" VerticalAlignment="Center"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                        </StackPanel>
                    </Border>

                    <ui:ItemsRepeater ItemsSource="{Binding SelectedPazFile.cachedFilePaths}">
                        <ui:ItemsRepeater.ItemTemplate>
                            <DataTemplate DataType="x:String">
                                <Grid ColumnDefinitions="*, Auto">
                                    <TextBlock Grid.Column="0" Text="{Binding}"
                                               VerticalAlignment="Center" />
                                    <Button Grid.Column="1"
                                            VerticalAlignment="Center"
                                            Command="{Binding $parent[ui:ItemsRepeater].((editor:FileInfoViewModel)DataContext).DeleteCachedFileCommand}"
                                            CommandParameter="{Binding}">
                                        <ui:SymbolIcon Symbol="Delete" />
                                    </Button>
                                </Grid>
                            </DataTemplate>
                        </ui:ItemsRepeater.ItemTemplate>
                    </ui:ItemsRepeater>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>