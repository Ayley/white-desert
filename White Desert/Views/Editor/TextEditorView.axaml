<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:helper="clr-namespace:White_Desert.Helper"
             xmlns:avaloniaEdit="https://github.com/avaloniaui/avaloniaedit"
             xmlns:editor="clr-namespace:White_Desert.ViewModels.Editor"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="editor:TextEditorViewModel"
             x:Class="White_Desert.Views.Editor.TextEditorView">

    <Design.DataContext>
        <editor:TextEditorViewModel />
    </Design.DataContext>

    <avaloniaEdit:TextEditor Document="{Binding EditorDocument}"
                             Background="Transparent"
                             Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                             SyntaxHighlighting="{Binding HighlightingDefinition}"
                             HorizontalScrollBarVisibility="Auto"
                             VerticalScrollBarVisibility="Auto"
                             FontFamily="Cascadia Code,Consolas,Monospace"
                             FontWeight="Normal"
                             FontSize="14"
                             ShowLineNumbers="True"
                             IsReadOnly="True"
                             helper:TextEditorHelper.ScrollToTopOnDocChange="True" />
</UserControl>