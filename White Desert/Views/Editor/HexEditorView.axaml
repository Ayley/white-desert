<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:White_Desert.Controls"
             xmlns:editor="clr-namespace:White_Desert.ViewModels.Editor"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="editor:HexEditorViewModel"
             x:Class="White_Desert.Views.Editor.HexEditorView">
    
    <Design.DataContext>
        <editor:HexEditorViewModel />
    </Design.DataContext>
    
    <controls:HexEditorControl DataSource="{Binding HexDataSource}"
                               Background="Transparent"
                               BorderThickness="0"
                               CornerRadius="8" />
</UserControl>